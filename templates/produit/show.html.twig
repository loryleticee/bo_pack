{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ produit.name }}</td>
            </tr>
            <tr>
                <th>Qr_code</th>
                <td>{{ produit.qrCode }}</td>
            </tr>
            <tr>
                <th>Id_qr_code</th>
                <td>{{ produit.idQrCode }}</td>
            </tr>
            <tr>
                <th>Brand</th>
                <td>{{ produit.brand }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ produit.model }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ produit.status }}</td>
            </tr>
            <tr>
                <th>Add_date</th>
                <td>{{ produit.addDate ? produit.addDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Last_modify</th>
                <td>{{ produit.lastModify ? produit.lastModify|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ produit.type }}</td>
            </tr>
            <tr>
                <th>Place</th>
                <td>{{ produit.place }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('produit_index') }}">back to list</a>

    <a href="{{ path('produit_edit', {'id': produit.id}) }}">edit</a>

    {{ include('produit/_delete_form.html.twig') }}
{% endblock %}
