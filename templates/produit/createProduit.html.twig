{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Admin - Incyte{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('admin') }}
{% endblock %}
{% block body %}

    {% include '/admin/_navbar.html.twig' %}
    <style>label.required{display: contents}</style>
    <div class="container">
        <h3 class="pb-4"><a class="search-btn pr-3" href="{{ path('admin_home') }}" >&#8249;</a>Cr√©er un produit {% if user  is defined %} {{ user.firstname }} {{ user.lastname  | upper }} {% endif %}</h3>
        <div class="row bg-white rounded-lg shadow-lg p-3">
            <div class="col-12">

                {{ form_start(form) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(form) }}
                </div>

                <div class="row">
                    <div class="col">
                        {{ form_row(form.type_produit) }}
                        {{ form_row(form.name) }}
                        {{ form_row(form.brand) }}
                        {{ form_row(form.model) }}
                        <div class="row">
                        <div class="col-6">{{ form_row(form.status) }}</div>
                        <div class="col-6">{{ form_row(form.place) }}</div>
                        </div>
                        {{ form_row(form.user) }}
                        {{ form_row(form.save) }}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}

