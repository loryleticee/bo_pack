{% extends 'base.html.twig' %}

{% block title %}Admin - Incyte{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('admin') }}
{% endblock %}
{% block body %}

    {% include '/admin/_navbar.html.twig' %}
    <style>label.required{display: contents}</style>
    <div class="container">
        <h3 class="pb-4"><a class="pr-3" href="{{ path('admin_home') }}" >&#8249;</a>Cr√©er un produit</h3>
        <div class="row bg-white rounded-lg shadow-lg p-3">
            <div class="col-12">

                {{ form_start(form) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(form) }}
                </div>

                <div class="row">
                    <div class="col">
                        {{ form_row(form.type) }}
                        {{ form_row(form.name) }}
                        {{ form_row(form.brand) }}
                        {{ form_row(form.model) }}
                    </div>
                    <div class="col">
                        <div class="w-50">
                            {{ form_row(form.id_qr_code) }}
                            {{ form_row(form.status) }}
                            {{ form_row(form.add_date) }}
                            {{ form_row(form.last_modify) }}
                        </div>


                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}

