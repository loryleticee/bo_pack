{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Admin - Incyte{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('admin') }}
{% endblock %}
{% block body %}

    <style>label.required{display: contents}</style>
    {% include '/admin/_navbar.html.twig' %}
    <div class="container">
    <h3 class="pb-4"><a class="pr-3" href="{{ path('admin_home') }}" >&#8249;</a>Modification de produit</h3>
        <div class="row bg-white p-3 shadow-lg">
            <div class="col-12">
                {% for message in app.flashes('sucess') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}

                {{ form_start(form) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(form) }}
                </div>

                <div class="row">
                    <div class="col">
                        {{ form_row(form.name) }}
                        {{ form_row(form.brand) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.model) }}
                        {{ form_row(form.status) }}
                        {{ form_row(form.type_produit) }}
                    </div>
                </div>
                {{ form_row(form.place) }}
                {{ form_row(form.user) }}
                {{ form_row(form.save) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
