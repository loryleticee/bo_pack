{% form_theme form 'bootstrap_4_layout.html.twig' %}

{{ form_start(form) }}
<div class="my-custom-class-for-errors">
	{{ form_errors(form) }}
</div>
<div class="container">
	<div class="row bg-white">
		<div class="col-3">
			{{ form_row(form.lastname) }}
			{{ form_row(form.firstname) }}
		</div>
		<div class="col-3">
			{{ form_row(form.email) }}
			{{ form_row(form.bu) }}
		</div>
		<div class="col-3">
			{{ form_row(form.status) }}
		</div>
	</div>
	{{ form_end(form) }}
	<br>
</div>
