{% extends 'base.html.twig' %}

{% block title %}Admin - Bo_pack
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('admin') }}
{% endblock %}
{% block body %}

	{% include '/admin/_navbar.html.twig' %}
	<div class="container">
		<div class="row">
			<div class="col-6">
				<a href="{{ path('produit_new_user', {id: user.id}) }}">
					<button class="btn btn-primary mb-5 text-right float-right">Créer un produit pour
						{{ user.firstname}}
						{{user.lastname }}
					</button>
				</a>
				<h3>Produits de
					{{ user.firstname}}
					{{user.lastname }}</h3>
				<br>
				<table class="table bg-white shadow rounded-lg">
					<thead>
						<tr>
							<th>Nom</th>
							<th>Type</th>
							<th>Utilisateur</th>
							<th>Date de création</th>
							<th>Emplacement</th>
							<th>Date de modification</th>
							<th>Qr Code</th>
							{# <th>Qr code Id</th> #}
							<th>Marque</th>
							<th>Modele</th>
							<th>État</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						{% for produit in produits %}
							<tr>
								<td>{{ produit.name }}</td>
								<td>{{ produit.type }}</td>
								<td>{{ produit.user_id }}</td>
								<td>{{ produit.add_date|format_date(locale='fr') }}</td>
								<td>{{ produit.place }}</td>
								<td>{{ produit.last_modify|format_date(locale='fr') }}</td>
								<td>{{ produit.qr_code }}</td>
								<td>{{ produit.brand }}</td>
								<td>{{ produit.model }}</td>
								<td>{{ produit.status }}</td>
								<td>
									<div class="dropdown">
										<button class="btn btn-sm  rounded-circle border" data-toggle="dropdown">
											<i class="fas fa-ellipsis-h point"></i>
										</button>
										<div class="dropdown-menu dropdown-menu-right">
											<a class="dropdown-item" href="{{ path('produit_edit', {id: produit.id}) }}">Editer
											</a>
											{{ include('produit/_delete_form.html.twig') }}
										</div>
									</div>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
        </div>
        <div class='row'>
            <a href="{{ path('admin_edit_user' , {id: user.id} ) }}"><button class="btn btn-primary mb-5 text-right float-right">Modifier l'utilisateur</button></a>
			<div class='col-6'>
				<table class="container bg-white shadow rounded-sm">
					<tr>
						<td>
							Nom :
							{{ user.firstname | upper }}
						</td>
					</tr>
					<tr>
						<td>
							Prénom:
							{{ user.lastname | capitalize }}
						</td>
					</tr>
					<tr>
						<td>
							BU:
							{{ user.bu | capitalize }}
						</td>
					</tr>
					<tr>
						<td>
							Depuis le
							{{ user.created_at |format_date(locale='fr') }}
						</td>
					</tr>
				</table>
			</div>
		</div>
	</div>


{% endblock %}
