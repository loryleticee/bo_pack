<form method="post" action="{{ path('admin_reason_delete', {'id': reason.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reason.id) }}">
    <a class="dropdown-item" ><button class="btn btn-delete p-0">Supprimer</button></a>
</form>
