{% extends 'base.html.twig' %}

{% block title %}Admin - Incyte{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('admin') }}
{% endblock %}
{% block body %}

    {% include '/admin/congres/_navbar.html.twig' %}
    <style>label.required{display: contents}</style>
    <div class="container">
        {% for message in app.flashes('sucess') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <h3 class="pb-4"><a class="pr-3" href="{{ path('admin_congres_user', {id: congres.id}) }}" >&#8249;</a>Editer le congr√®s</h3>
        <div class="row bg-white rounded-lg shadow-lg p-3">
            <div class="col-12">

                {{ form_start(form) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(form) }}
                </div>

                <div class="row">
                    <div class="col">
                        {{ form_row(form.name) }}
                        {{ form_row(form.security_code) }}
                    </div>
                    <div class="col">
                        <div class="w-50">
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}

